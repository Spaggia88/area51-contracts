{
    "name": "alienbase-contracts",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "test": "hardhat test",
        "test:coverage": "cross-env NODE_OPTIONS=\"--max-old-space-size=2048\" hardhat coverage",
        "test:gas": "cross-env REPORT_GAS=true yarn test",
        "deploy:testnet": "npx hardhat --network testnetbase deploy --reset --export-all ./core_contracts.json",
        "deploy:mainnet": "npx hardhat --network base deploy --reset --export-all ./core_contracts.json",
        "inittoken:testnet": "npx hardhat run --network testnetbase scripts/initToken.js",
        "initcode": "npx hardhat run --network testnetbase scripts/verify.js",
        "inittoken:mainnet": "npx hardhat run --network base scripts/initToken.js",
        "initpair:mainnet": "npx hardhat run --network base scripts/initPair.js",
        "initpair:testnet": "npx hardhat run --network testnetbase scripts/initPair.js",
        "initfarm:mainnet": "npx hardhat run --network base scripts/initfarm.js",
        "initrewarder:testnet": "npx hardhat run --network testnetbase scripts/initrewarder.js",
        "setowner:mainnet": "npx hardhat run --network base scripts/setowner.js"
    },
    "devDependencies": {
        "@boringcrypto/boring-solidity": "git+https://github.com/boringcrypto/BoringSolidity.git",
        "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
        "@nomiclabs/hardhat-ethers": "^2.0.2",
        "@nomiclabs/hardhat-etherscan": "^3.0.1",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@openzeppelin/contracts": "^4.2.0",
        "@types/mocha": "^8.2.1",
        "@types/node": "^14.14.31",
        "chai": "^4.3.4",
        "dotenv": "^10.0.0",
        "ethereum-waffle": "^3.4.0",
        "ethers": "^5.7.2",
        "ganache-time-traveler": "^1.0.16",
        "hardhat": "^2.17.1",
        "hardhat-deploy": "^0.8.11",
        "hardhat-deploy-ethers": "^0.3.0-beta.10"
    },
    "dependencies": {
        "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
        "@openzeppelin/contracts-upgradeable": "^4.4.2",
        "@uniswap/lib": "^4.0.1-alpha",
        "axios": "^0.24.0",
        "csv-writer": "^1.6.0",
        "ethereumjs-util": "^7.1.3",
        "lodash": "^4.17.21",
        "moment": "^2.29.1",
        "uniswap": "^0.0.1"
    }
}
